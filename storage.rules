rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Match avatar images: avatars/{userId}_{timestamp}
    match /avatars/{imageId} {
      allow read: if true;
      allow write: if request.auth != null 
                   && imageId.matches(request.auth.uid + '.*')
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Match cover images: covers/{userId}_{timestamp}
    match /covers/{imageId} {
      allow read: if true;
      allow write: if request.auth != null 
                   && imageId.matches(request.auth.uid + '.*')
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Match chat attachments: chats/{chatId}/{fileName}
    match /chats/{chatId}/{fileName} {
      // Allow read if authenticated (in a real app, we'd check if user is in the chat)
      allow read: if request.auth != null;
      
      // Allow write if authenticated
      allow write: if request.auth != null
                   && request.resource.size < 50 * 1024 * 1024; // Max 50MB (Videos)
    }
    
    // Default deny for other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}