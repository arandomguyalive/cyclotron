rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Match avatar images: avatars/{userId}_{timestamp}
    match /avatars/{imageId} {
      allow read: if true;
      allow write: if request.auth != null 
                   && imageId.matches(request.auth.uid + '.*')
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Match cover images: covers/{userId}_{timestamp}
    match /covers/{imageId} {
      allow read: if true;
      allow write: if request.auth != null 
                   && imageId.matches(request.auth.uid + '.*')
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // General Uploads (Posts/Reels): uploads/{userId}/{fileName}
    match /uploads/{userId}/{fileName} {
      allow read: if true;
      allow write: if isOwner(userId)
                   && request.resource.size < 100 * 1024 * 1024; // Max 100MB (High Res Video)
    }

    // Stories: stories/{userId}/{fileName}
    match /stories/{userId}/{fileName} {
      allow read: if true;
      allow write: if isOwner(userId)
                   && request.resource.size < 100 * 1024 * 1024; // Max 100MB
    }

    // Match chat attachments: chats/{chatId}/{fileName}
    match /chats/{chatId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.resource.size < 50 * 1024 * 1024; // Max 50MB
    }
    
    // Default deny for other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}