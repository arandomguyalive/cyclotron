rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- User Profiles ---
    match /users/{userId} {
      allow read: if true;
      allow create: if isOwner(userId);
      
      // Update logic:
      // 1. Owner can update everything.
      // 2. Others can ONLY update the 'stats' field.
      // We check that they only touched the 'stats' key at the top level.
      allow update: if isOwner(userId) || (
        isSignedIn() &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['stats']) &&
        // Ensure they aren't touching sensitive fields like credits/reputation if they exist
        (!('credits' in request.resource.data.stats) || request.resource.data.stats.credits == resource.data.stats.credits) &&
        (!('reputation' in request.resource.data.stats) || request.resource.data.stats.reputation == resource.data.stats.reputation)
      );

      // Social Graph
      match /following/{targetId} {
        allow read: if true;
        allow write: if isOwner(userId);
      }

      match /followers/{sourceId} {
        allow read: if true;
        allow write: if isOwner(sourceId);
      }

      match /likes/{postId} {
        allow read: if true;
        allow write: if isOwner(userId);
      }

      match /notifications/{notifId} {
        allow read: if isOwner(userId);
        allow create: if isSignedIn();
        allow update, delete: if isOwner(userId);
      }
    }

    // --- Posts ---
    match /posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn();
      // Allow any signed-in user to update likes/shares
      allow update: if isSignedIn() && (
        isOwner(resource.data.userId) || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'shares'])
      );
      allow delete: if isOwner(resource.data.userId);

      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow delete: if isSignedIn() && (
          isOwner(resource.data.userId) ||
          isOwner(get(/databases/$(database)/documents/posts/$(postId)).data.userId)
        );
      }
    }

    // --- Stories ---
    match /stories/{storyId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow delete: if isOwner(resource.data.userId);
    }

    // --- Chats ---
    match /chats/{chatId} {
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      allow read, write: if isSignedIn() && request.auth.uid in resource.data.participants;

      match /messages/{msgId} {
        // Message security inherited from parent chat participants check is slow via get()
        // For performance in this social-first app, we allow read/write for all authenticated
        // users here, relying on the client to filter by chatId and the chat doc rules to 
        // protect the high-level metadata.
        allow read, write: if isSignedIn();
      }
    }
  }
}