rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- User Profiles ---
    match /users/{userId} {
      allow read: if true;
      allow create, update: if request.auth != null && request.auth.uid == userId;

      // Social Graph: Who I am following
      match /following/{targetId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      // Social Graph: Who is following me
      match /followers/{sourceId} {
        allow read: if true;
        // Allow the user doing the following (sourceId) to write here to add themselves
        allow write: if request.auth != null && request.auth.uid == sourceId;
      }

      // Posts this user has liked (User's personal like history)
      match /likes/{postId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      // Notifications
      match /notifications/{notifId} {
        // Only I can read my notifications
        allow read: if request.auth != null && request.auth.uid == userId;
        // Anyone can write a notification to me (e.g. "User X liked your post")
        allow write: if request.auth != null;
      }
    }

    // --- Posts ---
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null; // Allows updating (e.g., incrementing like counters)
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;

      // Comments Subcollection
      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null;
        // Allow delete if the user owns the comment OR if the user owns the parent post
        allow delete: if request.auth != null && (
          resource.data.userId == request.auth.uid ||
          get(/databases/$(database)/documents/posts/$(postId)).data.userId == request.auth.uid
        );
      }
    }

    // --- Stories ---
    match /stories/{storyId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // --- Chats ---
    // Allow access only if the user is listed in the 'participants' array
    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participants;
      allow create: if request.auth != null;

      match /messages/{msgId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
