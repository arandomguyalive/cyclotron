rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- User Profiles ---
    match /users/{userId} {
      allow read: if true;
      allow create: if isOwner(userId);
      
      // Update logic:
      // 1. Owner can update everything.
      // 2. Others can ONLY update the 'stats' map, and ONLY the 'followers' field within it.
      allow update: if isOwner(userId) || (
        isSignedIn() &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['stats']) &&
        request.resource.data.stats.diff(resource.data.stats).affectedKeys().hasOnly(['followers']) &&
        // Ensure they didn't touch critical fields even if nested
        request.resource.data.stats.credits == resource.data.stats.credits &&
        request.resource.data.stats.reputation == resource.data.stats.reputation
      );

      // Social Graph
      match /following/{targetId} {
        allow read: if true;
        allow write: if isOwner(userId);
      }

      match /followers/{sourceId} {
        allow read: if true;
        // sourceId is the person following, they are the ones writing to this subcollection
        allow write: if isOwner(sourceId);
      }

      match /likes/{postId} {
        allow read: if true;
        allow write: if isOwner(userId);
      }

      match /notifications/{notifId} {
        allow read: if isOwner(userId);
        allow create: if isSignedIn();
        allow update, delete: if isOwner(userId);
      }
    }

    // --- Posts ---
    match /posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn();
      // Non-owners can only touch likes/shares
      allow update: if isSignedIn() && (
        isOwner(resource.data.userId) || 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'shares'])
      );
      allow delete: if isOwner(resource.data.userId);

      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow delete: if isSignedIn() && (
          isOwner(resource.data.userId) ||
          isOwner(get(/databases/$(database)/documents/posts/$(postId)).data.userId)
        );
      }
    }

    // --- Stories ---
    match /stories/{storyId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow delete: if isOwner(resource.data.userId);
    }

    // --- Chats ---
    match /chats/{chatId} {
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participants;
      allow read, write: if isSignedIn() && request.auth.uid in resource.data.participants;

      match /messages/{msgId} {
        // Secure messages by checking if user is in parent chat participants
        allow read, write: if isSignedIn() && 
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
  }
}