rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- User Profiles ---
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow user to update their own profile
      // ALSO allow others to update specific stat fields (followers)
      allow update: if request.auth != null && (
        request.auth.uid == userId || 
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['stats']))
      );

      // Social Graph: Who I am following
      match /following/{targetId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      // Social Graph: Who is following me
      match /followers/{sourceId} {
        allow read: if true;
        // Allow the user doing the following (sourceId) to write here to add themselves
        allow write: if request.auth != null && request.auth.uid == sourceId;
      }

      // Posts this user has liked (User's personal like history)
      match /likes/{postId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      // Notifications
      match /notifications/{notifId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // --- Posts ---
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      // Allow any authenticated user to update likes and shares count
      allow update: if request.auth != null; 
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;

      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow delete: if request.auth != null && (
          resource.data.userId == request.auth.uid ||
          get(/databases/$(database)/documents/posts/$(postId)).data.userId == request.auth.uid
        );
      }
    }

    // --- Stories ---
    match /stories/{storyId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // --- Chats ---
    match /chats/{chatId} {
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participants;
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participants;

      match /messages/{msgId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}